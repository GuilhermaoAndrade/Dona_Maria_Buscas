<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_Activity"
    android:background="#c47a7a"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="230dp"
        >

        <EditText
            android:id="@+id/edtUsuario"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/borda"
            android:drawableRight="@drawable/login_black"
            android:hint="UsuÃ¡rio:"
            android:inputType="textPersonName"
            android:padding="15dp"

            />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/borda"
            android:drawableRight="@drawable/lock_black"
            android:hint="Senha:"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_margin="10dp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="entrarApp"
                android:text="@string/entrar"
                android:textColor="@color/fonte"

                />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:onClick="sairApp"
                android:text="@string/sair"
                android:textColor="@color/fonte" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>